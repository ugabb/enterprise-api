// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Enterprise {
  id        String  @id @default(uuid())
  name      String
  status    String
  purpose   String
  ri_number String
  address   Address @relation(fields: [addressId], references: [id])
  addressId String
}

model Address {
  id         String       @id @default(uuid())
  district   String
  city       String
  street     String
  state      String
  number     String
  cep        String
  Enterprise Enterprise[]
}
